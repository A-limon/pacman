<div id="main" class="postpart">
	<header class="clearfix">
	  <h1><a href="<%- config.root %><%- item.path %>" title="<%= item.title %>"><%= item.title %></a></h1>
	  <p>By
	  <% if (theme.google_plus){ %>
	 	 <a href="https://plus.google.com/<%- theme.google_plus %>?rel=author" title="<%= config.author %>"><%= config.author %></a>
	  <% } else { %>
		<a href="<%= config.url %>" title="<%= config.author %>"><%= config.author %></a>
	  <% } %>
	  on<time datetime="<%= item.date.toDate().toISOString() %>"><%= item.date.format(config.date_format) %></time></p>
	</header>
	<article>     
	     <%- item.content %>    
	</article>
	<%- partial('catetags') %>
	<%- partial('share') %>
	<%- partial('pagination') %>
	<%- partial('comment') %>
</div>  